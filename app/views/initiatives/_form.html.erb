          <div class="large-12 columns" data-reveal-id="caseloadModal">
            <label><h5><a href="#" class="button tiny secondary">?</a> Caseload:</h5></label>
            <%= f.text_area :caseload, :rows => "4" %>
          </div>

          <div class="large-12 columns" data-reveal-id="impactedModal">
            <label><h5><a href="#" class="button tiny secondary">?</a> Who is Impacted:</h5></label>
            <%= f.text_area :who_impacted, :rows => "4" %>
          </div>

      </fieldset>
    </div>


      <div class="button tiny alert">
        <%= f.submit 'Save' %>
      </div>
