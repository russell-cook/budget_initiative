          <hr>

          <div class="large-12 columns">
            <label><h5>Activity-Level Performance Measure #2:</h5></label>
            <%= f.text_field :agency_pm_2 %>
          </div>

      </fieldset>
    </div>

    <div class="large-12 columns">

      <fieldset>
        <legend><h5>Population/Caseload</h5></legend>

          <div class="large-12 columns" data-reveal-id="populationModal">
