    <div class="large-12 columns">

      <fieldset>
        <legend><h5>Initiative-Level Performance Measures (Proposed)</h5></legend>

          <div class="large-12 columns">
            <label><h5>Initiative-Level Performance Measure #1:</h5></label>
            <%= f.text_field :init_pm_1 %>
          </div>
          <div class="large-12 columns">
            <label><h5>Cost of Proposed Measure:</h5></label>
            <%= f.text_area :init_pm_1_cost, :rows => "4" %>
