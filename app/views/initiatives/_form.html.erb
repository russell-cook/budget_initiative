
    <%= form_for(@initiative) do |f| %>
      <% if @initiative.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@initiative.errors.count, "error") %> prohibited this initiative from being saved:</h2>

          <ul>
          <% @initiative.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="large-12 columns">
          <div class="button tiny alert">
            <%= f.submit 'Save' %>
          </div>
        </div>
      </div>

      <div class="large-3 columns">
        <label for="title-label" class="right inline"><h3>Initiative Title:</h3></label>
      </div>
      <div class="large-9 columns">
        <h3>
            <%= f.text_field :title %>
        </h3>
      </div>

